{
  "name": "ashwoods-lightfoot/lightfoot-coding-standard",
  "description": "Custom PHPCS standard based on PSR-12",
  "version": "1.0.0",
  "type": "phpcodesniffer-standard",
  "autoload": {
    "psr-4": {
      "Lightfoot\\": "src/",
      "Test\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.2",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "platform": {
    "php": "8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --bootstrap ./tests/bootstrap.php ./tests"
  }
}
