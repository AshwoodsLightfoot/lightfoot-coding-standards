{
  "name": "ashwoodslightfoot/lightfoot-coding-standards",
  "description": "Custom PHPCS standard based on PSR-12",
  "license": "MIT",
  "type": "phpcodesniffer-standard",
  "autoload": {
    "psr-4": {
      "Lightfoot\\": "src/",
      "Test\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.2",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "platform": {
    "php": "8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --bootstrap ./tests/bootstrap.php ./tests",
    "cs": "./vendor/bin/phpcs --standard=src/LightfootCodingStandards/ruleset.xml examples/sniff-fixture.php",
    "fix": "./vendor/bin/phpcbf --standard=src/LightfootCodingStandards/ruleset.xml examples/sniff-fixture.php"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
